{
	"info": {
		"name": "MayaFin API Services",
		"description": "\n# MayaFin API Services\n### Postman\n### [API Collection](https://services.mayafin.in/postman)\n### Swagger\n### [API Explorer](https://services.mayafin.in/api/swagger/)\n### ReDoc\n### [API Documentation](https://services.mayafin.in/api/)\n\n\nContact Support:\n Name: MayaFin Admin\n Email: admin@mayafin.in",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Lender Integration",
			"item": [
				{
					"name": "{application_id}",
					"item": [
						{
							"name": "Loan Application Status API",
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{baseUrl}}/loans/{{application_id}}",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"loans",
										"{{application_id}}"
									]
								},
								"description": "API fetches task & workflow status for a loan application"
							},
							"response": []
						},
						{
							"name": "Loan Application Lender API",
							"request": {
								"method": "PUT",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{}"
								},
								"url": {
									"raw": "{{baseUrl}}/loans/{{application_id}}",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"loans",
										"{{application_id}}"
									]
								},
								"description": "API submits a half workflow task to push a loan application at the lender side by calling Lender APIs in the background."
							},
							"response": []
						},
						{
							"name": "Loan Application LMS API",
							"request": {
								"method": "PATCH",
								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{}"
								},
								"url": {
									"raw": "{{baseUrl}}/loans/{{application_id}}",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"loans",
										"{{application_id}}"
									]
								},
								"description": "API submits a half workflow task to fetch a loan application from the LMS by calling LMS APIs in the background."
							},
							"response": []
						}
					]
				},
				{
					"name": "Loan Application Workflow API",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var data = JSON.parse(responseBody);",
									"pm.globals.set(\"application_id\", data.application_id);"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.globals.set(\"loan_id\", pm.globals.get(\"loan_id\"));"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"loan_id\": \"{{loan_id}}\",\n    \"lms_code\": \"{{lms_code}}\",\n    \"lender_code\": \"{{lender_code}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/loans/",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"loans",
								""
							]
						},
						"description": "API submits a full workflow task to fetch borrower's loan application from LMS and other services and then push it to the lender side."
					},
					"response": []
				}
			]
		}
	],
	"auth": {
		"type": "apikey",
		"apikey": [
			{
				"key": "value",
				"value": "Token {{token}}",
				"type": "string"
			},
			{
				"key": "key",
				"value": "Authorization",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "https://services.mayafin.in/api/v1"
		},
		{
			"key": "token",
			"value": ""
		},
		{
			"key": "lms_code",
			"value": "FF"
		},
		{
			"key": "lender_code",
			"value": "KU"
		}
	]
}
